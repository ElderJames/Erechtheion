<?xml version="1.0" encoding="utf-8" ?>
<SqlMap scope="topic"  >
  <sql id="whereId">
    WHERE Id = @Id
  </sql>
  <sql id="queryAll">
    SELECT * FROM Topic
  </sql>
  <sql id="queryById">
    #queryAll #whereId
  </sql>
  <sql id="queryPaged">
    #queryAll LIMIT @StartIndex,@PageSize;
  </sql>
</SqlMap>